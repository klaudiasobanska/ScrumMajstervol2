<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.ciastkaipiwo.android.scrummajster.SprintConfigActivity"
    android:orientation="vertical"
    android:background="@color/config_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="150dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/sprintStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:hint="Choose start date"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            style="@android:style/Widget.EditText"
            android:layout_marginBottom="25dp"/>

        <TextView
            android:id="@+id/sprintEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:hint="Choose end date"
            android:paddingLeft="15dp"
            android:layout_marginBottom="25dp"
            style="@android:style/Widget.EditText" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ok_button"
            android:id="@+id/okButton"
            android:textColor="#006064"
            android:background="#f5f5f5"
            android:textSize="20dp"
            android:layout_marginBottom="25dp"
            android:textStyle="bold"/>

    </LinearLayout>
</LinearLayout>
