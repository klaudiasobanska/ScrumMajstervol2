<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:layout_gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    android:background="@color/config_color"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="140dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
    <EditText
        android:id="@+id/project_name_config"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/project_title_hint"
        android:inputType="text"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:layout_marginBottom="25dp"
        android:background="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            style="@android:style/Widget.EditText"
            android:hint="Choose start date"
            android:textSize="17dp"
            android:focusable="false"
            android:id="@+id/start_date"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:layout_marginBottom="25dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textSize="17dp"
            android:hint="Choose end date"
            style="@android:style/Widget.EditText"
            android:focusable="false"
            android:id="@+id/end_date"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:layout_marginBottom="25dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ok_button"
        android:id="@+id/project_submit_button"
        android:textColor="#006064"
        android:background="#f5f5f5"
        android:textSize="20dp"
        android:textStyle="bold"

        />
    </LinearLayout>
</LinearLayout>
